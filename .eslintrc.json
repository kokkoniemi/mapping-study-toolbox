{
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "extends": [
    "standard",
    "eslint:recommended",
    "prettier",
    "prettier/babel",
    "prettier/standard"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "prettier/prettier": "error"
  }
}
